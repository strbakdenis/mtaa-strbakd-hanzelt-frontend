<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <ImageView android:id="@+id/fImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/cities"/>

        <TextView
            android:id="@+id/fname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_toEndOf="@+id/fImage"
            android:layout_toRightOf="@+id/fImage"
            android:fontFamily="monospace"
            android:text="Apple"
            android:textColor="#212121"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/fdesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fname"
            android:layout_alignStart="@+id/fname"
            android:layout_alignLeft="@+id/fname"
            android:text="Malus Domenstica"
            android:textColor="#040303"
            android:textSize="20sp"
            android:textStyle="normal|italic" />
    </RelativeLayout>

</RelativeLayout>